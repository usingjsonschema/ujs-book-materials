    "asi" : false,
    "boss" : false,
    "debug" : false,
    "eqnull" : false,
    "esnext" : false,
    "evil" : false,
    "expr" : false,
    "funcscope" : false,
    "gcl" : false,
    "globalstrict" : false,
    "iterator" : false,
    "lastsemic" : false,
    "laxbreak" : false,
    "laxcomma" : false,
    "loopfunc" : false,
    "moz": false,
    "multistr" : false,
    "proto" : false,
    "scripturl" : false,
    "smarttabs" : false,
    "shadow" : false,
    "sub" : false,
    "supernew" : false,
    "validthis" : false,

    // Environments
    "node" : true,

