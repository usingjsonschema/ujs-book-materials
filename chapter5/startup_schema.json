{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "title":"Server start up",
  "description":"List of servers to start",

  "type":"object",
  "properties":
  {
    "servers":
    {
      "type":"array",
      "items":
      {
        "type":"object",
        "properties":
        {
          "name":{"type":"string"},
          "start":{"type":"boolean"},
          "program":{"type":"string"},
          "port":{"type":"integer"}
        },
        "additionalProperties":false,
        "required":["name", "start", "program", "port"]
      }
    }
  }
}
