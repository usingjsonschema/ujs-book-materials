{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "title":"Employee",
  "description":"Employee data",

  "type":"object",
  "properties":
  {
    "employees":
    {
      "type":"array",
      "items":
      {
        "type":"object",
        "properties":
        {
          "name":{"type":"string"},
          "unit":{"type":"integer", "minimum":1, "maximum":9999},
          "title":{"type":"string"}
        },
        "additionalProperties":false,
        "required":["name", "unit", "title"]
      }
    }
  }
}
